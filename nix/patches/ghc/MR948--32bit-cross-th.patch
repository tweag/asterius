diff --git a/deSugar/DsMeta.hs b/deSugar/DsMeta.hs
index 5de954ae7d..09a4fecbd5 100644
--- a/deSugar/DsMeta.hs
+++ b/deSugar/DsMeta.hs
@@ -1947,7 +1947,7 @@ globalVar name
